{% extends 'base.html.twig' %}

{% block title %}Hello CafeController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #FAFAFA; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
        <h1>{{cafe.name}}</h1>
        <h2>{{cafe.note}}</h2>
        <img src="{{cafe.pictureUrl}}" alt="{{cafe.name}} image">
        <br>
        <p>{{cafe.box}}, {{cafe.number}}<br>
            {{cafe.street}}<br>
            {{cafe.city}}{{cafe.country}}</p>
    </div>
{% endblock %}